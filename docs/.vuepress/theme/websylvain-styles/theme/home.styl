.home{
  position: relative;

  h2, h3{
    border: 0px;
  }

  .home-section{

    position: relative;
    .home-section-header{
      margin-bottom: 75px;
    }

    .home-section-scroll{
      width: 100%;
      text-align: center;
      position: absolute;
      left: 50%;
      bottom: 60px;
      -webkit-transform:translateX(-50%);
      transform:translateX(-50%);
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: bold;
      i{
        display: block;
      }
    }
  }

  #hero{
    position: relative;
    text-align: center;
    margin-top: 100px;
  }

  #about{
    .about-content{
      .about-content-illustration{
        margin: 80px 0px;
        .column:first-child{
            margin-top: 70px;
        }


        img{
          width: 100%;
          height: auto;
        }
      }
    }

    .langage-list{
      margin: 50px 0px 50px 0px;
      img{
        display: inline-block;
        vertical-align: top;
        width: 50px;
        margin: 0px 15px 15px 0px;
        transition: filter .35s cubic-bezier(.694,.048,.335,1) .2s;
        transition: filter .35s cubic-bezier(.694,.048,.335,1) .2s, -webkit-transform .35s cubic-bezier(.694,.048,.335,1) .2s;
        -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
        filter: grayscale(100%);
        &:hover{
          -webkit-filter:none;
          filter: none;
        }
      }
    }
  }

  #services {
    .practice-content{
      .practice-content-list{
        display: flex;
        flex-wrap: wrap;
        padding: 0px 0px 0px 50px;
        margin: 0px;
        list-style: none;
        font-family: $title_font;
        text-transform: uppercase;
        font-size: 1.4rem;
        gap: 15px;
        a {
          color: white!important;
        }
      }
    }
  }
}

  #contact{
    .btn{
          margin-top: 110px;
    }
  }

/*  GO FULL WIDTH BELOW 480 PIXELS */
@media only screen and (min-width: 960px) {
  #about{
    .about-content{
      .about-content-illustration{
        margin: 0px!important;
        .col:first-child{
          padding-top: 75px;
          padding-right: 15px;
        }
        .col:nth-child(2){
          padding-left: 15px;
        }
      }
    }

    .practice-content{
      margin-top: 150px;
      .practice-content-list{
      }
    }
  }

  .langage-list{
    margin-bottom: 0px;
  }
}
